<%- include('../partials/header') %>

<h1>UPCOMING LAUNCHES</h1>
<table>
    <thead>
        <tr>
            <th>ROCKET MISSION</th>
            <th>AGENCY</th>
            <th>LOCATION</th>
            <th>DATE</th>
            <th>TIME</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% launchData.launches.forEach(function(l) { %>
        <tr>
            <td><%= l.name %></td>
            <td><%= l.lsp.name %></td>
            <td><%= l.location.name %></td>
            <td><%= (new Date(l.windowstart)).toDateString() %></td>
            <td><%= (new Date(l.windowstart)).toLocaleTimeString() %></td>
            <td><a href="/launches/<%= l.id %>">DETAILS</a></td>
            <td>
                <form method="POST" action="/favorites">
                    <input type="hidden" name="launchId" value="<%= l.id %>" />
                    <input type="submit" value="heart" />
                </form>
            </td>
        </tr>
        <% }); %>
    </tbody>
</table>
<%- include('../partials/footer') %>